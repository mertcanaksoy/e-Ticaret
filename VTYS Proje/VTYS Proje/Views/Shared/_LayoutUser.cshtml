<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Bla Bla e-Ticaret</title>
    <meta name="description" content="Bla Bla e-Ticaret ile hızlı ve güvenilir alışveriş" />
    <meta name="author" content="Mert AKSOY" />
    <meta name="keywords" content="elektronik, bilgisayar, telefon, tablet, giyim, ayakkabı, çanta" />
    <link rel="shortcut icon" href="/Content/Template/images/favicon.ico" type="image/x-icon" />
    <!-- ======================================================================
                                Mobile Specific Meta
    ======================================================================= -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <!-- ======================================================================
                                Style CSS + Google Fonts
    =======================================================================
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400italic,700italic,400,600,700,800" rel="stylesheet" type="text/css"> -->
    <link rel="stylesheet" href="/Content/Template/css/bootstrap.css" />
    <link rel="stylesheet" href="/Content/Template/css/style.css" />
</head>
<body class="home-blog-show">
    <!-- ======================================================================
                                    START SCRIPTS
    ======================================================================= -->
    <div class="header">
        <div class="container">
            <div class="header-top-info">
                <ul class="header-top-socials">
                    <li><a href="https://www.facebook.com/"><img style="width:40px; height:25px;" title="Facebook" src="~/Content/Template/images/elements/facebook.ico" /></a></li>
                    <li><a href="https://www.twitter.com/"><img style="width:40px; height:25px;" title="Twitter" src="~/Content/Template/images/elements/twitter.png" /></a></li>                    
                </ul>
                Telefon: 0555 555 55 55
            </div>
            <div class="header-middle-info">
                <div class="col-md-4">
                    <div class="logo">
                        <a href="/Home/Index">
                            <img src="/Content/Template/images/elements/logo.jpg" style="width:220px; height:75px;" alt="site logo" />
                        </a>
                    </div>
                </div>
                <br />
                <div class="col-md-8">
                    <ul class="header-middle-account">
                        <li><a href="/Home/Sepetim"><i class="icon-259" title="Sepetim"></i> Sepetim</a></li>
                        <li><a href="/Home/Favorilerim"><i class="icon-335" title="Favorilerim"></i> Favori Ürünlerim</a></li>
                        @if (Session["user"] == null)
                        {
                            <li><a href="/Uye/KayitOl"><i class="icon-351" title="Giriş"></i> Üye Ol</a></li>
                            <li><a href="/Yonet/Index"><i class="icon-351" title="Giriş"></i> Giriş</a></li>

                        }
                        else
                        {
                            <li><a href="/Uye/Hesabim"><i class="icon-330" title="Hesabım"></i> Hesabım</a></li>
                            <li><a href="/Uye/CikisYap"><i class="icon-352" title="Çıkış"></i> Çıkış (@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(User.Identity.Name))</a></li>

                        }
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="menu">
                <div class="repsonsive-menu"><i class="icon-406" title="406"></i> Menu</div>
                <ul>
                    <li>
                        <p style="color:#150517">&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;</p>
                    </li>
                    <li>
                        <a href="/Home/Index">Anasayfa</a>
                    </li>
                    @{ Html.RenderAction("Kategoriler", "Home");}
                    @{ Html.RenderAction("Markalar", "Home");}
                    <li><a href="/Home/Iletisim">İletişim</a></li>
                    <li><a href="/Home/Hakkimizda">Hakkımızda</a></li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <!-- ======================================================================
                                    END HEADER
    ======================================================================= -->
    <!-- ======================================================================
                                    START CONTENT
    ======================================================================= -->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        @{ Html.RenderAction("SideKategori", "Home");}
                        @{ Html.RenderAction("SideMarka", "Home");}
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- ======================================================================
                                    END CONTENT
    ======================================================================= -->
    <!-- ======================================================================
                                    START FOOTER
    ======================================================================= -->
    @{ Html.RenderAction("Footer", "Home");}
    <!-- ======================================================================
                                    END FOOTER
    ======================================================================= -->
    <!-- ======================================================================
                                    START SCRIPTS
    ======================================================================= -->
    <script src="/Content/Template/js/modernizr.custom.63321.js" type="text/javascript"></script>
    <script src="/Content/Template/js/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="/Content/Template/js/jquery-ui.min.js" type="text/javascript"></script>
    <script src="/Content/Template/js/bootstrap.js" type="text/javascript"></script>
    <script src="/Content/Template/js/placeholder.js" type="text/javascript"></script>
    <script src="/Content/Template/js/imagesloaded.pkgd.min.js" type="text/javascript"></script>
    <script src="/Content/Template/js/masonry.pkgd.min.js" type="text/javascript"></script>
    <script src="/Content/Template/js/jquery.swipebox.min.js" type="text/javascript"></script>
    <script src="/Content/Template/js/farbtastic/farbtastic.js" type="text/javascript"></script>
    <script src="/Content/Template/js/options.js" type="text/javascript"></script>
    <script src="/Content/Template/js/plugins.js" type="text/javascript"></script>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <!-- ======================================================================
                                    END SCRIPTS
    ======================================================================= -->
</body>

</html>